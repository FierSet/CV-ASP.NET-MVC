<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ASP.NET MVC</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CV.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CV_MVC.styles.css" asp-append-version="true" />
</head>
<body>

@{
    Random rnd = new Random();
    List<string> bgColor = new List<string>{
        "#16A085",
        "#2C3E50",
        "#031cc7",
        "#77B1A9",
        "#FFFFFF",
        "#d20b00",
        "red", 
        "blue", 
        "green", 
        "yellow"
    };
    int randocolor = rnd.Next(0, bgColor.Count);
    string Color = bgColor[randocolor];
}

    <style>
        body {
            background-color: @Color;
        }
    </style>

    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer element-center footer-CV">
        Designed and developed with ASP.NET MVC & SQLITE.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
